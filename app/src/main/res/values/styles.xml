    <style name="activity_splash_title" parent="regular_white_textview_style_size_70sp">
        <item name="android:shadowColor">@color/color_black</item>
        <item name="android:shadowRadius">70</item>
        <item name="android:shadowDy">10</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="activity_uvod_title" parent="regular_white_textview_style_size_30sp">
        <item name="android:shadowColor">@color/color_black</item>
        <item name="android:shadowRadius">30</item>
        <item name="android:shadowDy">10</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="statistics_name" parent="bold_white_textview_style_size_10sp">
        <item name="android:background">@drawable/grey_border_and_fill</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">@dimen/space_5dp</item>
        <item name="android:paddingBottom">@dimen/space_5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="statistics_candidate_name" parent="bold_blue_textview_style_size_15sp">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="statistics_value" parent="regular_grey_textview_style_size_12sp">
    </style>
    <style name="statistics_block">
        <item name="android:layout_marginTop">@dimen/space_10dp</item>
        <item name="android:layout_marginBottom">@dimen/space_10dp</item>
    </style>
    <style name="how_to_play_title" parent="bold_blue_textview_style_size_20sp">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="how_to_play_text" parent="regular_grey_textview_style_size_15sp"/>
    <style name="button_style">
        <item name="android:paddingStart">@dimen/space_10dp</item>
        <item name="android:paddingEnd">@dimen/space_10dp</item>
    </style>
    <style name="bold_button_style" parent="button_style">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="bold_grey_button_style" parent="bold_button_style">
        <item name="android:background">@drawable/basic_grey_button_style</item>
    </style>
    <style name="bold_red_button_style" parent="bold_button_style">
        <item name="android:background">@drawable/basic_red_button_style</item>
    </style>
    <style name="bold_blue_button_style" parent="bold_button_style">
        <item name="android:background">@drawable/basic_blue_button_style</item>
    </style>
    <style name="basic_button_style" parent="button_style">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="basic_grey_button_style" parent="basic_button_style">
        <item name="android:textColor">@color/color_grey_dark</item>
    </style>
