<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_grey_light"
        android:paddingTop="@dimen/space_30dp"
        android:paddingBottom="@dimen/space_30dp"
        android:paddingStart="@dimen/space_30dp"
        android:paddingEnd="@dimen/space_30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonUpdateCharacter"
            style="@style/bold_grey_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/color_red_light"
            android:text="@string/update" />


        <Button
            android:id="@+id/buttonDeleteCharacter"
            style="@style/bold_grey_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonUpdateCharacter"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buttonUpdateCharacter"
            android:layout_marginTop="@dimen/space_15dp"
            android:background="@color/color_blue_light"
            android:text="@string/delete" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>