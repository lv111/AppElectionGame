<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <TextView
        android:id="@+id/textViewCandidate"
        style="@style/bold_blue_textview_style_size_30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_10dp"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/textView"
        style="@style/bold_white_textview_style_size_20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/versus" />

    <TextView
        android:id="@+id/textViewOpponent"
        style="@style/bold_red_textview_style_size_30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_10dp"
        android:textAllCaps="true"/>
</LinearLayout>